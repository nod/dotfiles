tell application "Hermes"
  if get playback state is playing then
	set output to "bleh"
    -- get track, artist and album
    set currtitle to the current song's title
    set currartist to the current song's artist
    -- show track, artist
    set songinfo to (":musical_note: listening to *" & currtitle & "* by *" & currartist & "*" )
    set output to songinfo
  end if
end tell
