tell application "iTunes"
  if player state is playing then
    -- get track, artist and album
    set currtrack to the name of current track
    set currartist to the artist of current track
    -- show track, artist
    set songinfo1 to ("/me is listening to " & currtrack & " by " & currartist )
    set output to songinfo1

    set songinfo2 to (songinfo1 & "\n\n" & ":musical_note: listening to *" & currtrack & "* by *" & currartist & "*" )
    set output to songinfo2
  end if
end tell
